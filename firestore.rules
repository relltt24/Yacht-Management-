rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Rules for vessels collection and all subcollections
    match /vessels/{vesselId}/{document=**} {
      // Allow any authenticated user to read and write to any document
      // within a specific vessel's subcollections
      allow read, write: if isAuthenticated();
    }
    
    // Rules for the vessel document itself
    match /vessels/{vesselId} {
      // Allow any authenticated user to read and write vessel documents
      allow read, write: if isAuthenticated();
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
