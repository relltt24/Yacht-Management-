{
  "functions": {
    "source": "functions",
    "runtime": "nodejs18"
  },
  "hosting": [
    {
      "target": "app",
      "public": "public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/api/**",
          "function": "api"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}